<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".WatchListFragment"
    android:background="@color/ScreenBgColor"
    android:fillViewport="true">

        <LinearLayout
            android:id="@+id/linearLayout17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <!--headings-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/watch_list"
                    android:textColor="@color/movie_descrip_movie_name"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/removeMovieBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/remove_from_watchlist"
                    android:textColor="@color/indicatorColor"
                    android:textSize="12sp"
                    android:visibility="invisible" />
            </LinearLayout>
            <!--search edit text-->
            <LinearLayout
                android:id="@+id/linearLayout15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/searchEdTxt"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/search_bg"
                    android:drawableEnd="@drawable/ic_search"
                    android:hint="@string/search_movies_sdc_originals"
                    android:textColorHint="@color/search_box_hint_color"
                    android:inputType="text"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="@color/enter_num_txt_color"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

    <TextView
        android:id="@+id/noResultTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_result"
        android:textAlignment="center"
        android:textColor="@color/enter_num_txt_color"
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout17" />
        <LinearLayout
            android:id="@+id/recyclerViewPlace"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout17">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RecyclerViewWatchListMovie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:layoutAnimation="@anim/item_animation_layout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout17"
                app:layout_constraintVertical_bias="0.0"
                tools:listitem="@layout/add_watch_list_layout" />
        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>