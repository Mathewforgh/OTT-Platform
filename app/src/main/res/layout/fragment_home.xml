<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:background="@color/ScreenBgColor"
    android:fillViewport="true"
    android:scrollIndicators="none">

    <RelativeLayout
        android:id="@+id/barLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/home_page_bannerViewPager"
            android:layout_width="match_parent"
            android:layout_height="530dp"
            android:layout_gravity="start"
            android:foreground="@drawable/language_gradient_bg"
            android:scaleType="fitXY"
            android:scrollIndicators="bottom"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="24dp"
            android:gravity="center_vertical"
            android:background="@drawable/home_page_location_bar"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                tools:ignore="UselessParent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_location_home_page"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/location_home"
                        android:textColor="@color/locationColor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/home_page_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chennai_india_home"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_language_home"
                tools:ignore="ContentDescription" />
        </LinearLayout>

<!--        <ImageView-->
<!--            android:layout_width="36dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_alignParentEnd="true"-->
<!--            android:layout_marginTop="26dp"-->
<!--            android:layout_marginEnd="24dp"-->
<!--            android:src="@drawable/ic_language_home"-->
<!--            tools:ignore="ContentDescription" />-->

        <LinearLayout
            android:id="@+id/play_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="170dp"
            android:layout_marginBottom="25dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_page_play_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="21dp"
                android:contentDescription="@string/playNow"
                android:src="@drawable/ic_play_home_page"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/home_page_banner_movie_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:ellipsize="marquee"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:text="@string/banner_movie_name"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/home_page_bannerMovie_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/movie_description_bg"
                android:padding="5dp"
                android:text="@string/tamil_drama_action_02_30_hrs"
                android:textColor="#ffff"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/home_page_shareNow_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/home_page_icons_bg"
                    android:gravity="end"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:contentDescription="@string/plus"
                        android:src="@drawable/ic_share_home_page" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:layout_marginStart="3dp"
                        android:text="@string/home_page_share_now"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        tools:ignore="SmallSp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/home_page_watchList_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/home_page_icons_bg"
                    android:gravity="center"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/watchListImg"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:contentDescription="@string/plus"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:text="@string/home_page_watchlist"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        tools:ignore="SmallSp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/MainRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/play_container"
            android:layoutAnimation="@anim/item_animation_layout"
            tools:listitem="@layout/main_recycler_view_item" />
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>